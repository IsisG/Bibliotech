<div class="modal fade formSearch" id="modalBuscarAutor" tabindex="-1" role="dialog" aria-hidden="true">
    @using (Ajax.BeginForm("Buscar", "Autor", null,
                                        new AjaxOptions { HttpMethod = "post", OnSuccess = "sucessoAutorSearch" }, new { id = "formBuscarAutor" }))
    {

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Buscar <small>Autor</small></h5>
                    <button id="closeModalAutor" class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group col-md-8">
                        @Html.Label("Nome", new { @for = "autorNomeSearch" })
                        @Html.TextBox("Nome", null, new { @id = "autorNomeSearch", @class = "form-control", type = "text" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" type="button" onclick="buscarAutor()">Buscar</button>
                </div>
                <div id="listaAutores" class="form-popup-resultados"></div>
            </div>
        </div>

    }
</div>